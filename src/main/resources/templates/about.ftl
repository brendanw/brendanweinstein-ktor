<#import "base.ftl" as base>
<@base.page>
    <div id="content" class="main_content">
        <div class="about_top_container">
            <img src="/static/media/about-photo.jpg"/>

            <button class="about_scroll_to">Scroll</button>

            <div class="about_leadin_line"></div>
        </div>

        <div class="hompage_about_content">
            <div class="about_container">
                <section class="about_top_panel">
                    <div class="container">
                        <!-- Title and Slider -->
                        <section class="about_title_slider">
                            <div class="bw_row">
                                <div class="column_2_5 flex_vertical_center">
                                    <ul class="slash_list">
                                        <li><span>Wingsuit Pilot</span></li>
                                        <li><span>Engineer</span></li>
                                    </ul>
                                </div>
                                <div class="column_3_5">
                                    <div class="about_slider flexslider">
                                        <ul class="slides">
                                            <li class=""
                                                style="width: 100%; float: left; margin-right: -100%; position: relative; opacity: 0; display: block; z-index: 1;">
                                                <img src="${assets.cdnBase}/media/stills/glacier-fly.jpg" draggable="false">
                                                <p class="slide_title"></p>
                                            </li>
                                            <li style="width: 100%; float: left; margin-right: -100%; position: relative; opacity: 0; display: block; z-index: 1;"
                                                class="">
                                                <img src="${assets.cdnBase}/media/stills/mcglynnsCrew.JPG" draggable="false">
                                                <p class="slide_title"></p>
                                            </li>
                                            <li style="width: 100%; float: left; margin-right: -100%; position: relative; opacity: 0; display: block; z-index: 1;"
                                                class="">
                                                <img src="${assets.cdnBase}/media/stills/cityWingsuitContrast.jpg"
                                                     draggable="false">
                                                <p class="slide_title"></p>
                                            </li>
                                            <li style="width: 100%; float: left; margin-right: -100%; position: relative; opacity: 0; display: block; z-index: 1;"
                                                class="">
                                                <img src="${assets.cdnBase}/media/stills/targetSmash.jpg" draggable="false">
                                                <p class="slide_title"></p>
                                            </li>
                                            <li style="width: 100%; float: left; margin-right: -100%; position: relative; opacity: 1; display: block; z-index: 2;"
                                                class="flex-active-slide">
                                                <img src="${assets.cdnBase}/media/stills/turkey.jpg" draggable="false">
                                                <p class="slide_title"></p>
                                            </li>
                                            <li style="width: 100%; float: left; margin-right: -100%; position: relative; opacity: 0; display: block; z-index: 1;"
                                                class="">
                                                <img src="${assets.cdnBase}/media/stills/altissimo-2.jpg" draggable="false">
                                                <p class="slide_title"></p>
                                            </li>
                                            <li style="width: 100%; float: left; margin-right: -100%; position: relative; opacity: 0; display: block; z-index: 1;"
                                                class="">
                                                <img src="${assets.cdnBase}/media/stills/altissimo-3.jpg" draggable="false">
                                                <p class="slide_title"></p>
                                            </li>
                                        </ul>
                                        <div class="flex_custom_nav">
                                            <a href="#" class="flex-prev"><img class="dash_arrow"
                                                                               src="${assets.cdnBase}/assets/dash_arrow_left.png"
                                                                               draggable="false"></a>
                                            <div class="slide_counter">
                                                <span class="current_slide">5</span>/<span class="total_slides">7</span>
                                            </div>
                                            <a href="#" class="flex-next"><img class="dash_arrow"
                                                                               src="${assets.cdnBase}/assets/dash_arrow_right.png"
                                                                               draggable="false"></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <h2>Brendan</h2>
                        </section>

                        <!-- Bio -->
                        <section class="about_bio">
                            <div class="bw_row">
                                <div class="column_2_5"></div>
                                <div class="column_3_5">
                                    <div class="about_content_container">
                                        <p class="rotated_text">About Brendan</p>
                                        <div class="about_content">
                                            <p>Brendan Weinstein has brought the world some of the most stunning and
                                                surreal footage
                                                of human flight. He began a gradual flying progression in 2010. In
                                                2015, he co-founded BaseBeta to help
                                                standardize BASE
                                                exit information and offer start analysis tools to fellow pilots. In
                                                2016 he
                                                started to become recognized for tackling new and technical wingsuit
                                                terrain
                                                lines.</p>
                                            <p>Brendan's flights have consistently garnered the interest of the world
                                                and
                                                have been
                                                featured by: <a href="https://www.youtube.com/watch?v=CO0P6ZS-WGs"
                                                                target="_blank"><span>GoPro</span></a>, <a
                                                        href="https://www.instagram.com/p/BqIhHGchTkI/" target="_blank">Roam</a>,
                                                <a href="https://www.youtube.com/watch?v=8irW-b4iKP0" target="_blank">Red
                                                    Bull</a>, <a href="https://marginalrevolution.com/marginalrevolution/2019/09/flying.html">Marginal Revolution</a>,
                                                <a href="https://www.reddit.com/r/IAmA/comments/9anvl6/i_am_brendan_weinstein_27_yr_old_wingsuit_pilot/"
                                                   target="_blank">Reddit Frontpage</a>, The Weather Channel, <a
                                                        href="https://www.huffpost.com/entry/peregrine-falcon-wingsuiter_n_5750dd4ee4b0c3752dcd33cd"
                                                        target="_blank">The
                                                    Huffington
                                                    Post</a>, and <a
                                                        href="https://www.msn.com/en-us/video/t/paa-presents-brendan-weinstein-wingsuit-flying/vp-BBMBSo0"
                                                        target="_blank">MSN</a>. In 2017, he was invited to join and
                                                compete in the World Wingsuit League.
                                                Brendan has competed, performed, and filmed in Turkey, China, Brazil,
                                                the
                                                Alps, and
                                                Eastern Sierras.</p>
                                            <p>Brendan splits his time between Rio de Janeiro, San Francisco, and
                                                Switzerland. When he
                                                is not flying, he is consulting for tech companies.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>

                        <!-- Quote -->
                        <section class="about_quote">
                            <p class="blockquote">â€œ</p>
                            <p class="blockquote_text">We want to give people surreal moments that steal them
                                from the day, even just for a minute</p>

                            <!-- Line -->
                            <div class="bottom_faded_line"></div>
                        </section>

                    </div>
                </section>
            </div>
        </div>
    </div>
</@base.page>